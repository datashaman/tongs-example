{
  "metadata": {
    "author": {
      "link": "https://bobloblaw.example.com/",
      "name": "Bob Loblaw"
    },
    "site": {
      "link": "https://bobloblawslawblog.example.com/",
      "title": "Bob Loblaw's Law Blog"
    }
  },
  "source": "src",
  "destination": "build",
  "clean": true,
  "frontmatter": true,
  "plugins": {
    "drafts": true,
    "markdown": {
      "breaksEnabled": true
    },
    "sass": {
      "outputStyle": "expanded"
    },
    "collections": {
      "posts": "posts/*.html"
    },
    "permalinks": {
      "pattern": ":name",
      "date": "Y/m/d",
      "linksets": [
        {
          "match": {
            "collection": "posts"
          },
          "pattern": "posts/:date/:title"
        }
      ]
    },
    "views": {
      "paths": [
        "views"
      ],
      "compiled": ".cache"
    }
  }
}
